            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingestión de sustancias toxicas o envenenamiento:" />

            <RadioGroup
                android:id="@+id/radioGroupIngestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonSiIngestion"
                    android:layout_width="wrap_content"
